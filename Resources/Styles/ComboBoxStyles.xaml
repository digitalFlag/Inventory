<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="ComboBox.Static.Background" Color="Pink"/>
    <SolidColorBrush x:Key="ComboBox.Static.Border" Color="HotPink"/>
    <SolidColorBrush x:Key="ComboBox.Static.Foreground" Color="DimGray"/>



    <Style x:Key="ComboBoxMainStyle" TargetType="ComboBox">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderThickness" Value="1"/>
        
        <Setter Property="BorderBrush" Value="{StaticResource ComboBox.Static.Border}"/>
        <Setter Property="Background" Value="{StaticResource ComboBox.Static.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource ComboBox.Static.Foreground}"/>


    </Style>

</ResourceDictionary>